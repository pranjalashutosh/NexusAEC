{
  "name": "@nexus-aec/email-providers",
  "version": "0.1.0",
  "private": true,
  "description": "Unified email provider adapters for Outlook and Gmail",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nexus-aec/encryption": "workspace:*",
    "@nexus-aec/logger": "workspace:*",
    "@nexus-aec/secure-storage": "workspace:*",
    "@nexus-aec/shared-types": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
