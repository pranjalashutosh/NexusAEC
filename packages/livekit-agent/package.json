{
  "name": "@nexus-aec/livekit-agent",
  "version": "0.1.0",
  "private": true,
  "description": "LiveKit Voice Agent for NexusAEC - handles voice briefings, STT/TTS, and GPT-4o reasoning",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@livekit/agents": "^0.5.0",
    "@livekit/agents-plugin-openai": "^0.5.0",
    "@livekit/rtc-node": "^0.12.1",
    "@nexus-aec/intelligence": "workspace:*",
    "@nexus-aec/logger": "workspace:*",
    "@nexus-aec/shared-types": "workspace:*",
    "dotenv": "^17.2.3",
    "livekit-server-sdk": "^2.8.1",
    "openai": "^6.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
