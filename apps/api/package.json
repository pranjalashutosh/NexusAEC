{
  "name": "@nexus-aec/api",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API for NexusAEC (OAuth callbacks, LiveKit tokens, sync endpoints)",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --forceExit",
    "test:watch": "jest --watch",
    "type-check": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "@nexus-aec/email-providers": "workspace:*",
    "@nexus-aec/logger": "workspace:*",
    "fastify": "^5.7.1",
    "ioredis": "^5.9.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.4.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
